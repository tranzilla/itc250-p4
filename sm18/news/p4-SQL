-- create table sm18_categoriesP4 to display the 3 categories 
DROP TABLE IF EXISTS `sm18_categoriesP4`;
CREATE TABLE `sm18_categoriesP4` (
  `CategoryID` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `Category` varchar(255) DEFAULT '',
  `Description` text,
  PRIMARY KEY (`CategoryID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

INSERT INTO `sm18_categoriesP4` (`CategoryID`, `Category`, `Description`) VALUES
(1,	'Health',	'Latest news in Health'),
(2,	'Sports',	'Latest news in Sports'),
(3,	'Technology',	    'Latest news in Techology');

-- create table sm18_feedsP4 to link URL, and description to RSS 
DROP TABLE IF EXISTS `sm18_feedsP4`;
CREATE TABLE `sm18_feedsP4` (
  `FeedID` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `CategoryID` int(10) unsigned DEFAULT '0',
  `FeedURL` varchar(255) DEFAULT '',
  `Title` varchar(255) DEFAULT '',
  `Description` text,
  PRIMARY KEY (`FeedID`),
  KEY `CategoryID` (`CategoryID`),
  CONSTRAINT `sm18_feedsP4_ibfk_1` FOREIGN KEY (`CategoryID`) REFERENCES `sm18_categoriesP4` (`CategoryID`) ON DELETE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

